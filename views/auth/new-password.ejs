<%- include('../layouts/head.ejs') %>
<link rel="stylesheet" href="/style/forms.css">
<link rel="stylesheet" href="/style/login.css">

<%- include('../layouts/nav.ejs') %>
<main>
    <% if(errorMessage) { %>
    <div class="user-message user-message--error"> <%= errorMessage %> </div>
    <% } %>
    <form class="login-form" action="/reset_password" method="POST">
        <div class="div-form">
            <label for="password"> New Password </label>
            <input type="password" name="password1" id="password">
        </div>
        <div class="div-form">
            <label for="password"> Confirm Password </label>
            <input type="password" name="password2" id="password">
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken%>">
         <input type="hidden" name="_id" value="<%= userID%>">
        <button style="text-align: center;" class='add-button' type="submit" class="btn"> Set Password </button>
    </form>
</main>
<%- include('../layouts/foot.ejs') %>